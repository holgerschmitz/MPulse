
float lambda = 1e-6;
float dx = 0.05*lambda;

Nx = 100;
Ny = 100;
Nz = 100;

Lx = dx*Nx;
Ly = dx*Ny;
Lz = dx*Nz;


// plasma and laser parameters


cflFactor = 0.5;

float dt = cflFactor*dx/clight;

tMax = 100*dt;

float w = 3e-6;
float l = 3e-6;

FDTD_Plain {
  //eps_rel = 1.2;
  
  float xm = (x - Lx/2)/l;
  float ym = (y - Ly/2)/w;
  float zm = (y - Lz/2)/w;
  float amp = sin(2*pi*x/lambda); // * exp(-(xm*xm + ym*ym + zm*zm));
  
  Ex = 0.0;
  Ey = amp;
  Ez = 0.0;

  Bx = 0.0;
  By = 0.0;
  //Bz = sqrt(eps_rel)*amp/clight;
  Bz = amp/clight;
}

float outDt = dt;


FieldDiag Ex {
  file = "Ex_#t.h5";
  field = "Ex";
  deltaTime = outDt;
}

FieldDiag Ey {
  file = "Ey_#t.h5";
  field = "Ey";
  deltaTime = outDt;
}

FieldDiag Ez {
  file = "Ez_#t.h5";
  field = "Ez";
  deltaTime = outDt;
}


FieldDiag Bx {
  file = "Bx_#t.h5";
  field = "Bx";
  deltaTime = outDt;
}

FieldDiag By {
  file = "By_#t.h5";
  field = "By";
  deltaTime = outDt;
}

FieldDiag Bz {
  file = "Bz_#t.h5";
  field = "Bz";
  deltaTime = outDt;
}
